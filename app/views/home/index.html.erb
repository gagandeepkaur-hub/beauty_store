<div class="page-wrapper">

  <!-- ===== HEADER ===== -->
  <header class="main-header">
    <div class="logo">PALETTO</div>

    <nav class="header-nav">
      <%= link_to "Home", root_path %>
      <%= link_to "Shop", products_path %>
      <%= link_to "Contacts", "#" %>
    </nav>

    <div class="header-icons">
      <%= link_to "ðŸ›’", cart_path %>
      <span>ðŸ‘¤</span>
    </div>
  </header>

  <!-- ===== HERO SECTION ===== -->
  <section class="hero-banner">
    <%= image_tag "hero.jpg", class: "hero-img" %>

    <div class="hero-overlay"></div>

    <div class="hero-text">
      <p class="hero-subtitle">NEW COLLECTION</p>
      <h1 class="hero-title">SUPER RICH COLORS</h1>
      <p class="hero-desc">
        Luxury makeup for every skin tone â€” bold, creamy shades.
      </p>
      <%= link_to "SHOP NOW", products_path, class: "btn hero-btn" %>
    </div>
  </section>

  <!-- ===== CATEGORY SECTION ===== -->
  <section class="category-section">
    <div class="category-grid">

      <!-- FACE -->
      <div class="category-card cat-face">
        <%= image_tag "cosmetics.jpg", class: "category-img" %>
        <span class="category-label">FACE</span>
        <h3 class="category-title">MAKEUP</h3>
      </div>

      <!-- EYE -->
      <div class="category-card cat-eye">
        <%= image_tag "makeup.jpg", class: "category-img" %>
        <span class="category-label">EYE</span>
        <h3 class="category-title">MAKEUP</h3>
      </div>

      <!-- LIP -->
      <div class="category-card cat-lip">
        <%= image_tag "makeup.jpg", class: "category-img" %>
        <span class="category-label">LIP</span>
        <h3 class="category-title">MAKEUP</h3>
      </div>

      <!-- GIFT SETS -->
      <div class="category-card cat-gift">
        <%= image_tag "fragrance.jpg", class: "category-img" %>
        <span class="category-label">GIFT SETS</span>
        <h3 class="category-title">MAKEUP KITS</h3>
      </div>

    </div>
  </section>

  <!-- ===== PRODUCTS SECTION ===== -->
  <section class="product-section">
    <h2 class="section-heading">Our Products</h2>

    <div class="product-grid">
      <% @products.each do |product| %>
        <article class="product-card">
          <!-- Product Image -->
          <a href="<%= product_path(product) %>" class="product-image-wrap">
            <% if product.category == "Skincare" %>
              <%= image_tag "skincare.jpg", class: "product-image" %>
            <% elsif product.category == "Fragrance" %>
              <%= image_tag "fragrance.jpg", class: "product-image" %>
            <% elsif product.category == "Haircare" %>
              <%= image_tag "haircare.jpg", class: "product-image" %>
            <% else %>
              <%= image_tag "makeup.jpg", class: "product-image" %>
            <% end %>
          </a>

          <!-- Product Text -->
          <h3 class="product-name"><%= product.name %></h3>
          <p class="product-brand"><%= product.brand %></p>

          <p class="product-price">
            $<%= number_with_precision(product.price, precision: 2) %>
          </p>

          <button class="add-cart-btn">ADD TO CART</button>
        </article>
      <% end %>
    </div>
  </section>

</div>
