<div class="product-show">
  <div class="product-image">
    <% if @product.image.attached? %>
      <%= image_tag @product.image, alt: @product.name %>
    <% else %>
      <%= image_tag "placeholder.jpg", alt: @product.name if asset_exists?("placeholder.jpg") %>
    <% end %>
  </div>

  <div class="product-details">
    <h1><%= @product.name %></h1>

    <% if @product.category.present? %>
      <p class="product-category">
        Category: <%= @product.category.name %>
      </p>
    <% end %>

    <p class="product-price">
      <%= number_to_currency(@product.price) %>
    </p>

    <p class="product-description">
      <%= simple_format(@product.description) %>
    </p>

    <%= button_to "Add to Cart",
                  cart_items_path(product_id: @product.id),
                  method: :post,
                  class: "btn btn-primary" %>

    <%= link_to "Back to Products", products_path, class: "btn btn-secondary" %>
  </div>
</div>
