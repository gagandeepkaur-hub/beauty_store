<% breadcrumb :product, @product %>




      <% if @product.main_image.attached? %>
        <%= image_tag @product.main_image.variant(:large), alt: @product.name, class: "main-product-image" %>
      <% end %>

      <% if @product.gallery_images.attached? %>

          <% @product.gallery_images.each do |image| %>
            <%= image_tag image.variant(:thumb), alt: @product.name, class: "gallery-thumb" %>
          <% end %>

      <% end %>



      <%= @product.name %>
      <%= @product.brand %>
      <%= @product.category %>

      <% if @product.categories.any? %>

          <% @product.categories.each do |cat| %>
            <%= link_to cat.name, products_path(category: cat.name), class: "tag" %>
          <% end %>

      <% end %>

      $<%= number_with_precision(@product.price, precision: 2) %>


        <% if @product.on_sale %>
          On Sale
        <% end %>

        <% if @product.new_arrival %>
          New Arrival
        <% end %>



        Description
        <%= @product.description %>


      <%= button_to "Add to Cart", cart_items_path(product_id: @product.id), method: :post, class: "btn btn-primary btn-large" %>



  <%= link_to "â† Back to Products", products_path, class: "back-link" %>
