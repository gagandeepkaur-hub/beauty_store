<h1>Your Cart</h1>

<% if @cart_items.blank? %>
  <p>Your cart is empty.</p>
  <%= link_to "Start Shopping", products_path, class: "btn-primary" %>
<% else %>
  <div class="cart-items">
    <% @cart_items.each do |product| %>
      <% quantity = @cart[product.id.to_s] || 0 %>

      <div class="cart-item">
        <p>
          <strong><%= product.name %></strong>
          – Qty: <%= quantity %>
          – $<%= number_with_precision(product.price * quantity, precision: 2) %>
        </p>

        <%= button_to "Remove", remove_from_cart_path(product_id: product.id),
                      method: :delete,
                      class: "btn-outline" %>
      </div>
    <% end %>
  </div>
<% end %>
