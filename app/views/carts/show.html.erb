<h1>Your Cart</h1>

<% if @cart.blank? %>
  <p>Your cart is empty.</p>
  <%= link_to "Start Shopping", products_path, class: "btn btn-primary" %>
<% else %>
  <table class="cart-table">
    <thead>
      <tr>
        <th>Product</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Subtotal</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% total = 0 %>
      <% @cart_items.each do |product| %>
        <% quantity = @cart[product.id.to_s] %>
        <% subtotal = product.price * quantity %>
        <% total += subtotal %>
        <tr>
          <td><%= product.name %></td>
          <td><%= number_to_currency(product.price) %></td>
          <td>
            <%= form_with url: update_item_cart_path, method: :post, local: true do |f| %>
              <%= hidden_field_tag :product_id, product.id %>
              <%= number_field_tag :quantity, quantity, min: 1 %>
              <%= f.submit "Update" %>
            <% end %>
          </td>
          <td><%= number_to_currency(subtotal) %></td>
          <td>
            <%= button_to "Remove",
                          remove_item_cart_path(product_id: product.id),
                          method: :delete,
                          class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <p class="cart-total">
    Total: <strong><%= number_to_currency(total) %></strong>
  </p>

  <%= link_to "Checkout", new_order_path, class: "btn btn-primary" %>
  <%= button_to "Clear Cart", clear_cart_path, method: :delete, class: "btn btn-secondary" %>
<% end %>
